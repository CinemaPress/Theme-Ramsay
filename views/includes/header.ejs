<header>
    <div class="header">
        <div class="menuSch">
            <a href="<%- page.protocol %><%- page.domain %>" class="red"><b>Главная</b></a>
            <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.year %>/2016" class="fiolet"><b>Новинки 2016</b></a>
            <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.type %>/<%- page.urls.types.movie %>">Фильмы в <b>HD</b></a>
            <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.type %>/<%- page.urls.types.serial %>"><b>Сериалы</b></a>
        </div>

        <% if (typeof slider == 'object' && slider.movies.length) { %>

        <div class="sliderbox">
            <div class="toop">
                <div class="carousel">
                    <div id="carousel" class="carousel_inner">

                        <% slider.movies.forEach(function (movie) { %>

                        <div class="carousel_box">

                            <a href="<%- movie.url %>" class="thumbnail" title="<%- movie.title_ru %> (<%- movie.year %>)">
                                <img src="<%- movie.poster %>" alt="<%- movie.title_ru %> (<%- movie.year %>)" style="max-width:100%;">
                                <div class="text_filmsss text_filmsss_top"><%- movie.title_ru %></div>
                            </a>

                        </div>

                        <% }); %>

                    </div>
                    <input type="button" id="carousel_prev" value="prev">
                    <input type="button" id="carousel_next" value="next">
                </div>
            </div>
        </div>

        <% } %>

        <div class="clr"></div>
    </div>
</header>

<div class="topper" id="topper">
    <div class="wrapper">
        <a href="<%- page.protocol %><%- page.domain %>" title="На главную">
            <img src="/themes/ramsay/public/images/logo.png" class="logo" alt="Логотип">
        </a>
        <div class="mobile burger" onclick="showMenu();"></div>
        <div class="mobile showFind" onclick="showFinder();"></div>
        <div class="social">
            <div class="ya-share2" data-services="vkontakte,facebook,odnoklassniki,moimir,gplus,twitter"></div>
        </div>

        <div class="searching">
            <form action="<%- page.protocol %><%- page.domain %>/<%- page.urls.search %>/title" name="searchform" method="get">
                <div class="input-append">
                    <label>
                        `<input class="search" type="text" id="story" name="q" value="Поиск" onBlur="if(this.value=='') this.value='Поиск';" onFocus="if(this.value=='Поиск') this.value='';" data-provide="typeahead" data-items="4">
                    </label>
                    <button class="search_btn" type="submit"></button>
                </div>
            </form>
        </div>

        <div class="login continueViewingBlock">
            <a href="#continueViewing" id="continueViewing"><img src="/themes/ramsay/public/images/video-play.png" class="h2-title-short" alt="Продолжить смотреть"> На чем остановились?</a>
        </div>

    </div>
</div>