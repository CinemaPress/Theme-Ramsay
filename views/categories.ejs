<!doctype html>
<html lang="<%- page.language %>">
<head>

    <% include includes/head.ejs %>

</head>
<body>
<div class="wrapper">

    <% include includes/header.ejs %>

    <div class="container">
        <main>
            <div class="main">

                <div class="sbar">
                    <div class="speedbar">
						<span>
							<a href="/">
								<span>Главная</span>
							</a>
						</span> »
                        <%= page.title %>
                    </div>
                </div>

                <% if (typeof page.adv === 'object' && page.adv.top) { %>
                <div class="decription" style="text-align: center; border: 1px solid #101010;">
                    <%- page.adv.top %>
                </div>
                <% } %>

                <div class="short_zombiz">
                    <div class="short_podborki">
                        <div class="fullstory">
                            <h1><%= page.title %></h1>

                            <div class="collect-content">

                                <% if (typeof categories === 'object' && categories.length) { %>
                                <div style="clear: both"></div>
                                <% categories.forEach(function (content) { %>
                                <div style="float: left; width: 50%;">
                                    <div style="margin: 0; padding: 10px">
                                        <a href="<%- content.url %>" class="cinemapress-news" style="background:url(<%- content.image %>);">
                                            <div class="cinemapress-news-title">
                                                <%= content.title %>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <% }); %>
                                <div style="clear: both"></div>
                                <% } %>

                            </div>
                        </div>
                    </div>
                </div>

                <% if (typeof page.adv === 'object' && page.adv.bottom) { %>
                <div class="decription" style="text-align: center; border-right: 1px solid #101010;">
                    <%- page.adv.bottom %>
                </div>
                <% } %>

                <% if (page.seo) { %>

                <div class="decription" style="border-right: 1px solid #101010;">
                    <div class="decription-text">
                        <%- page.seo %>
                    </div>
                </div>

                <% } %>

            </div>
        </main>
        <aside>

            <% include includes/right.ejs %>

        </aside>
    </div>

    <% include includes/footer.ejs %>

</div>
</body>
</html>